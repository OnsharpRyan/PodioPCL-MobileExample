<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
					   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
					   x:Class="PodioPCL.MobileExample.Pages.AppDetailPage"
             Title="{Binding Model.Name}">
  <StackLayout>
    <Label Text="Application ID:" Font="Large"/>
    <Label Text="{Binding Model.AppId}" Font="Medium"/>

    <Label Text="Icon:" Font="Large"/>
    <Label Text="{Binding Model.Icon}" Font="Medium"/>

    <Label Text="Item Name:" Font="Large"/>
    <Label Text="{Binding Model.ItemName}" Font="Medium"/>

    <Label Text="Link:" Font="Large"/>
    <Label Text="{Binding Model.Link}" Font="Medium"/>

    <Label Text="Mail Box:" Font="Large"/>
    <Label Text="{Binding Model.Mailbox}" Font="Medium"/>

    <Button Text="View Items" Command="{Binding ViewItemsCommand}"/>
  </StackLayout>
</ContentPage>