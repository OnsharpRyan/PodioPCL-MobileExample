<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
					   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
					   x:Class="PodioPCL.MobileExample.Pages.SpaceDetailPage"
             Title="{Binding Model.Name}">
  <StackLayout>
    <Label Text="Workspace ID:" Font="Large"/>
    <Label Text="{Binding Model.SpaceId}" Font="Medium"/>
    <Button Text="View Apps" Command="{Binding ViewAppsCommand}"/>
  </StackLayout>
</ContentPage>